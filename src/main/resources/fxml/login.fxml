<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.immunicare.immunicare_admin.controller.LoginController">
   <children>
      <Rectangle fill="#66b2b2" height="250.0" stroke="#ffffff8b" strokeType="INSIDE" width="500.0" />
      <Pane fx:id="pane" layoutX="290.0" layoutY="0.0" prefHeight="250.0" prefWidth="220.0" style="-fx-background-color: #FFFFFF;">
         <ImageView fx:id="imgLogo" fitHeight="250.0" fitWidth="150.0" layoutX="30.0" layoutY="70.0" pickOnBounds="true" preserveRatio="true">
             <Image url="@/assets/logo_removebg_preview__1_.png" />
         </ImageView>
     </Pane>
     <Label fx:id="lblLogin" layoutX="57.0" layoutY="46.0" text="Login" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="58.0" layoutY="92.0" prefHeight="36.0" prefWidth="204.0" promptText="Username" />
      <PasswordField fx:id="password" layoutX="58.0" layoutY="141.0" prefHeight="36.0" prefWidth="204.0" promptText="Password" />
